{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "main-*"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:window:allow-start-dragging",
    "core:window:allow-set-title",
    "core:webview:default",
    "opener:default",
    "opener:allow-reveal-item-in-dir",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "process:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "zsh",
          "cmd": "/bin/zsh",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "/bin/bash",
          "args": true
        },
        {
          "name": "sh",
          "cmd": "/bin/sh",
          "args": true
        },
        {
          "name": "fish",
          "cmd": "/usr/bin/fish",
          "args": true
        },
        {
          "name": "pwsh",
          "cmd": "pwsh",
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "screenshots:default",
    "log:default",
    "deep-link:default",
    "updater:default"
  ]
}
