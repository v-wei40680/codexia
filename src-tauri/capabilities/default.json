{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "main-*"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:window:allow-start-dragging",
    "core:window:allow-set-title",
    "core:webview:default",
    "opener:default",
    "opener:allow-reveal-item-in-dir",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "process:default",
    "shell:default",
    "screenshots:default",
    "log:default",
    "deep-link:default",
    "fs:default",
      {
        "identifier": "fs:allow-read-text-file-lines",
        "allow": [{ "path": "$APPDATA/*" }, { "path": "$HOME/.claude/*" }]
      },
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists"
  ]
}